

<div class="banner" style="background-image: ,url(<%= %>);">
  <div class="banner-content">
    <h1>TA Rental</h1>
    <p>Rent a TA</p>

    <a class="btn-home" href="#">Book now</a>
  </div>
</div>


<div class= "home_container">
  <div class= "home_content">
   <h3> class="text-center">Our top teachers</h3>
   <div class="row">
     <% @teachers.each do |teacher| %>
      <div class="col-xs-12 cold-md-4">
      <% link_to teacher_path(teacher), class: "teachers" do %>
       <div class="card-home">
           <div class="card-description">
             <p>teacher's description</p>
           </div>
          <p class="card-teacher"> <%= teacher.price %> </p>
       </div>
     <% end %>
     </div>
    <% end %>
   </div>
  </div>
 </div>
