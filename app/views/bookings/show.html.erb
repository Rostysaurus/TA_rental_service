<div class="show-body">
    <div class="more-info">
    <h1 >Your booking with <%= @booking.teacher.name%></h1>
    </div>
      <div class="show">
        <div class="pic">
          <%= cl_image_tag @booking.teacher.photo.key, height: 150, width: 200, crop: :fill %>
          <div class="dates">
          <h4>From: <strong><%= @booking.start_date.strftime("%b/%d/%Y")%></strong></h4>
          <h4>Until <strong><%= @booking.end_date.strftime("%b/%d/%Y") %></strong></h4>
          </div>
          <div>
          <h2><%= @booking.teacher.name %></h2>
          <p><%= @booking.teacher.address %></p>
          </div>
        </div>
        <div class="rating-price">
          <h3><%= '⭐️' * @booking.teacher.rating.to_i %></h3>
          <h3>€ <%=@booking.teacher.price%></h3>
        </div>
        <div class="buttons">
          <p class="text-start btn btn-red"><%= link_to "Cancel", booking_path(@booking), method: :delete, data: { confirm: "Are you sure?" }%></p>
        </div>
      </div>
<div class="booking-show-btns">
   <p class="text-end btn btn-blue"><%= link_to "Back to your bookings", bookings_path%></p>
        <p class="text-end btn btn-yellow"><%= link_to "Find another teacher", teachers_path%></p>
</div>
