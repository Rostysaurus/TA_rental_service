
<div class="container-fluid">
  <div class="row justify-content-md-center gap-3">
    <h1 >Here are your bookings</h1>
    <% @bookings.each do |booking| %>
      <div class="col col-3 card">
       <%= cl_image_tag booking.teacher.photo.key, height: 150, width: 200, crop: :fill %>
        <p><%= link_to booking.teacher.name, booking_path(booking)%></p>
        <p><%= booking.teacher.price%> EUR</p>
        <p><%= '⭐️' * booking.teacher.rating %></p>
    </div>
  <% end %>
  </div>
</div>

<div class="btn-home-page">
<p class="btn btn-yellow" ><%= link_to "See all teachers", teachers_path%></p>
</div>
